{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "ignorePatterns": "**/dist/*.js",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "babelOptions": {
            "configFile": "./.babelrc"
        },
        "ecmaVersion": 12
    },
    "rules": {
        "max-len": [
            "warn",
            {
                "code": 120,
                "tabWidth": 2
            }
        ],
        "no-unused-vars": "warn",
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Router"
                ]
            }
        ]
    }
}